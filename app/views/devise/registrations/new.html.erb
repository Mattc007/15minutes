<section id="signup">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.email_field :email,
                                  autofocus: true,
                                  placeholder: 'Your email*',
                                  class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.password_field :password,
                                     autocomplete: "off",
                                     placeholder: 'Your password (8 character minimum)*',
                                     class: 'form-control' %>

              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation,
                                     autocomplete: "off",
                                     placeholder: 'Your password, again!',
                                     class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.submit "Sign up", class: 'btn btn-xl' %>
              </div>
            </div>
          </div>
         <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
