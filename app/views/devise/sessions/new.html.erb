<section id="login">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.email_field :email,
                                  autofocus: true,
                                  placeholder: 'Your email*',
                                  class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= f.password_field :password,
                                     autocomplete: "off",
                                     placeholder: 'Your password*',
                                     class: 'form-control' %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="form-group">
                  <%= f.check_box :remember_me, class: 'form-control' %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <%= f.submit "Log in", class: 'btn btn-xl' %>
              </div>
            </div>
          </div>
         <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
